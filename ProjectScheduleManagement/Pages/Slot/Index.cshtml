@page
@model ProjectScheduleManagement.Pages.Slot.IndexModel

@{
    ViewData["Title"] = "Slot";
}

<h1>Slot</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].SlotName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Slot) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlotName)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
