@page
@model ProjectScheduleManagement.Pages.Teacher.IndexModel

@{
    ViewData["Title"] = "Teacher";
}

<h1>Teacher</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Teacher) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
